@model IEnumerable<Movie>

@foreach (var movie in Model)
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="~/img/@movie.Image" alt="@movie.Name">
            <div class="card-body">
                <p class="card-text">
                    @movie.Name
                </p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-secondary">View</a>
                    </div>
                    <small class="text-muted">9 mins</small>
                </div>
            </div>
        </div>
    </div>
}